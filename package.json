{
  "name": "lark-context",
  "version": "1.0.0",
  "description": "Feishu bot with OpenCode AI integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "check-env": "tsx src/check-env.ts",
    "pre-commit": "pnpm typecheck && pnpm lint:fix"
  },
  "keywords": [
    "feishu",
    "lark",
    "bot",
    "opencode",
    "ai"
  ],
  "author": "tzwm",
  "license": "Apache-2.0",
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.24.0",
    "@opencode-ai/plugin": "^1.1.36",
    "@opencode-ai/sdk": "^1.1.36",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
